---
import BaseLayout from '../layouts/BaseLayout.astro';
import ClientLogos from '../components/ClientLogos.astro';
import WorkList from '../components/WorkList.astro';
---

<BaseLayout title="Yuta Suzumo | Filmmaker / FPV Drone Pilot" description="Portfolio landing page for Yuta Suzumo.">
  <section id="home" class="section hero" aria-labelledby="hero-title">
    <h1 id="hero-title">Yuta Suzumo</h1>
    <p class="hero-title">Filmmaker / FPV Drone Pilot</p>
    <p class="hero-sub">AVAILABLE WORLDWIDE</p>
    <a class="button" href="#work">View Work</a>
  </section>

  <ClientLogos />

  <WorkList />

  <section id="contact" class="section contact" aria-labelledby="contact-title">
    <div class="section-head">
      <p class="kicker">Get in touch</p>
      <h2 id="contact-title">CONTACT</h2>
    </div>
    <p class="contact-email">yutasuzumo@gmail.com</p>
    <p class="contact-note">External link: <a href="https://en.ac.jp/mypage_login" target="_blank" rel="noreferrer">en.ac.jp/mypage_login</a></p>
  </section>
</BaseLayout>
