---
const logos = ['CLIENT 01', 'CLIENT 02', 'CLIENT 03', 'CLIENT 04', 'CLIENT 05', 'CLIENT 06'];
---

<section class="logo-strip" aria-label="Client logos">
  <div class="logo-track">
    {logos.concat(logos).map((logo, index) => (
      <div class="logo-pill" aria-label={logo} aria-hidden={index >= logos.length ? 'true' : undefined}>{logo}</div>
    ))}
  </div>
</section>
